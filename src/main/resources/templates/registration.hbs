{{#partial "title" }}
    Chat - Sign up
{{/partial}}

{{#partial "internale-stylesheet" }}
    <style>
        body {
            padding-top: 40px;
        }
        .loginPanel {
            max-width: 360px;
        }
    </style>
{{/partial}}

{{#partial "content" }}
    <div class="container">
        <div class="panel panel-default center-block loginPanel">
            <div class="panel-heading">
                <h1><i class="fa fa-comments"></i> Chat
                    <small>Registrierung</small>
                </h1>
            </div>
            <div class="panel-body">
                <form action="/registerhandler" method="post">
                    <div class="form-group">
                        <label for="username" class="sr-only">Benutzername</label>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                            <input type="text" class="form-control" id="username" name="username"
                                   placeholder="Benutzername"
                                   required autofocus>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="sr-only">Passwort</label>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-fw"></i></span>
                            <input type="password" class="form-control" id="password" name="password"
                                   placeholder="Passwort"
                                   required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">
                        Registrieren
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script data-main="js/common" src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.20/require.min.js"></script>
{{/partial}}

{{> templates/base.hbs}}